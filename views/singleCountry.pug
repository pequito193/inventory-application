extends layout

block content
    h1.title=data.name.toLowerCase().split(' ').map(word => word.charAt(0).toUpperCase() + word.substring(1)).join(' ')
    div.info-wrapper
        p.info Population = #{data.population}
        p.info Area = #{data.area}kmÂ²
        p.info Continent = #{data.continent.toLowerCase().split(' ').map(word => word.charAt(0).toUpperCase() + word.substring(1)).join(' ')}
    div.buttons
        a(href=`/catalog/countries/${data.name}/edit`)
            button.button Edit
        a(href=`/catalog/countries/${data.name}/delete`)
            button.button Delete
        a(href='/catalog/countries')
            button.button Go Back